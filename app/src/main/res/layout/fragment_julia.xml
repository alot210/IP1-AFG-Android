<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="de.hsd.manguli.fractalsapp.EditorActivityFragment">


        <TextView
            android:id="@+id/text_j_real"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="128dp"
            android:text="Realteil"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/number_j_real"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="64dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="0"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toBottomOf="@+id/text_j_real"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_j_real"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/text_j_real_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Verändert den Realteil zwischen -1 und 1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_j_real" />

        <TextView
            android:id="@+id/text_j_imaginaer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="Imaginärteil"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_j_real_desc" />

        <EditText
            android:id="@+id/number_j_imaginaer"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="64dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="0"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toBottomOf="@+id/text_j_imaginaer"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_j_imaginaer" />

        <TextView
            android:id="@+id/text_j_imaginaer_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Verändert den Imaginärteil zwischen -1 und 1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_j_imaginaer" />

        <TextView
            android:id="@+id/text_j_Iteration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="Iterationen"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_j_imaginaer_desc" />

        <SeekBar
            android:id="@+id/seekBar_j_Iteration"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:max="20"
            android:paddingRight="0dip"
            android:progress="5"
            app:layout_constraintTop_toTopOf="@+id/text_j_Iteration"
            android:layout_marginTop="0dp"
            app:layout_constraintRight_toLeftOf="@+id/text_j_Iteration_value"
            android:layout_marginRight="0dp"
            app:layout_constraintLeft_toRightOf="@+id/text_j_Iteration"
            android:layout_marginLeft="0dp" />

        <TextView
            android:id="@+id/text_j_Iteration_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Verändert den Detailgrad der äußeren Knospen"
            app:layout_constraintTop_toBottomOf="@+id/text_j_Iteration"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/text_j_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="Farben"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/text_j_Iteration_desc"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/text_j_color_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Wählen Sie max. 4 Farben"
            app:layout_constraintTop_toBottomOf="@+id/text_j_color"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/text_j_Rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Rotation"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/text_j_color_desc"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Switch
            android:id="@+id/switch_j_Rotation"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:checked="false"
            android:switchMinWidth="60dp"
            app:layout_constraintLeft_toRightOf="@+id/picto_j_zoom_rotation"
            app:layout_constraintRight_toLeftOf="@+id/picto_j_rotation_rotation"
            app:layout_constraintTop_toTopOf="@+id/text_j_Rotation"
            tools:checked="false"
            app:layout_constraintHorizontal_bias="0.49" />

        <TextView
            android:id="@+id/text_j_rotation_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Landscape View: Zoom-in oder Drehung"
            app:layout_constraintTop_toBottomOf="@+id/text_j_Rotation"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/text_j_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Animation"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/text_j_rotation_desc"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Switch
            android:id="@+id/switch_j_Animation"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:switchMinWidth="60dp"
            app:layout_constraintTop_toTopOf="@+id/text_j_animation"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/switch_j_Rotation" />

        <TextView
            android:id="@+id/text_j_animation_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Automatische Zoom-in-Animation in die Menge "
            app:layout_constraintTop_toBottomOf="@+id/text_j_animation"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/switch_j_Speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="Geschwindigkeit"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/text_j_animation_desc"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <SeekBar
            android:id="@+id/seekBar_j_speed"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginTop="0dp"
            android:max="10"
            android:progress="3"
            app:layout_constraintTop_toTopOf="@+id/switch_j_Speed"
            app:layout_constraintRight_toLeftOf="@+id/text_j_Speed_value"
            android:layout_marginRight="0dp"
            app:layout_constraintLeft_toRightOf="@+id/switch_j_Speed"
            android:layout_marginLeft="0dp" />

        <TextView
            android:id="@+id/text_j_speed_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Variiert die Geschwindigkeit der Animation"
            app:layout_constraintTop_toBottomOf="@+id/switch_j_Speed"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/colorpicker_j_dummy"
            android:layout_width="130dp"
            android:layout_height="28dp"
            android:layout_marginRight="64dp"
            android:layout_marginTop="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_j_color"
            app:srcCompat="@drawable/color_circle_editor" />

        <TextView
            android:id="@+id/text_j_Iteration_value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:text="5"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/seekBar_j_Iteration"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/seekBar_j_Iteration"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/text_j_Speed_value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:text="3"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/seekBar_j_speed"
            app:layout_constraintBottom_toBottomOf="@+id/seekBar_j_speed"
            android:layout_marginBottom="0dp"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/picto_j_zoom_rotation"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="@+id/switch_j_Rotation"
            app:srcCompat="@drawable/rotation_fullscreen"
            app:layout_constraintLeft_toRightOf="@+id/text_j_Rotation"
            android:layout_marginLeft="64dp" />

        <ImageView
            android:id="@+id/picto_j_rotation_rotation"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/rotation_rotate"
            app:layout_constraintTop_toTopOf="@+id/switch_j_Rotation"
            android:layout_marginTop="0dp"
            android:layout_marginRight="64dp"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/button_j_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@color/colorPrimary"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Menge zeichnen!"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_j_speed_desc" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>